<nav class="clearfix">
	<div id="left_nav">
		<a href="/">RETURN TO ENTRIES</a>
	</div>	
	
</nav>



<section id="vote">

	<img class="title" src="/arts/headers/<%= @art.filename %>" />	
	<img class="nail" src="/arts/big/<%= @art.filename %>" />
	<p class="description"><%= @art.description %></p>
	<p><span class="name">- <%= @art.blogger %>,</span> <span class="link"><a href="<%= @art.blog_url %>" target="_blank"><%= @art.blog %></a></span></p>
		
	<form action="/vote" method="post" id="vote_form">
		<input type="hidden" name="id" value="<%= @art.id %>" />
		<input class="button-submit" type="submit" value="VOTE FOR THIS DESIGN" />
	</form>		
	
	
</section>	


<section id="social-buttons" class="clearfix">
	<!--- Pinterest link button -->
	<script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>	
<a href="http://pinterest.com/pin/create/button/?url=http%3A%2F%2Ftadashishoji.com&media=http%3A%2F%2Ffrozen-thicket-2524.herokuapp.com%2Farts%2F01_Hey-Nice-Nails.jpg&description=Checkout%20this%20design%20from%20<%= @art.blog %>" class="pin-it-button" count-layout="none"><img border="0" src="//assets.pinterest.com/images/PinExt.png" title="Pin It" /></a>

</section>


<section id="facebook-comments" class="clearfix">
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=427357767312145";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	
	<div class="fb-comments" data-href="<%= env['HTTP_HOST'] + "/vote/" + @art.id.to_s %>" data-num-posts="5" data-width="470"></div>


</section>	



