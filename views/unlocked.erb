<% if @user %>
<section id="nails" class="clearfix">
<% @arts.each_with_index do |art,i| %>
	<% trueIndex = i + 1 %>

	<% if trueIndex == 1 %>
		<ul>
			<li>
				<a href="/vote/<%= art.id %>"><img src="/arts/<%= art.filename %>" /></a>
			</li>	
	<% elsif trueIndex == @arts.size %>		
			<li>
				<img src="/arts/<%= art.filename %>" />
			</li>	
		</ul>	
	<% elsif (trueIndex % 3) == 0 %>	
			<li>
				<a href="/vote/<%= art.id %>"><img src="/arts/<%= art.filename %>" /></a>
			</li>	
		</ul>	
		<ul>
	<% else %>		
			<li>
				<a href="/vote/<%= art.id %>"><img src="/arts/<%= art.filename %>" /></a>
			</li>	
	<% end %>		
<% end %>
</section>

<div class="official-rules" class="clearfix">
	<a href="/official-rules">Official Rules</a>
</div>

<% else %>
<div>
	<h1>Login to Vote!!!</h1>
	<!--- 
	<a href="/auth/facebook">
		<span class="fb_button_text">Log In</span>
	</a>
	-->	
	<a 
	  target="_top" 
	  href="
	    https://www.facebook.com/dialog/oauth/?
	      client_id="<%= ENV["FACEBOOK_APP_ID"] %>"
	     &redirect_uri=https%3A%2F%2Fwww.facebook.com%2Fpages%2Fnull%2FPAGE_ID%2F%3Fsk%3Dapp_<%= ENV["FACEBOOK_APP_ID"] %>
	     &scope=user_likes,user_photos">
	 	<span class="fb_button_text">Log In</span>
	</a>
</div>
<% end %>